<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/edit_view"
    android:visibility="visible">
<TextView
    android:id="@+id/start_label"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="\n\nStart location"
    />
<EditText
    android:id="@+id/start_entry"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:background="@android:drawable/editbox_background"
    android:layout_below="@id/start_label" 
    />
<TextView
    android:id="@+id/end_label"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="End location"
    />
<EditText
    android:id="@+id/end_entry"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:background="@android:drawable/editbox_background"
    android:layout_below="@id/end_label" 
    />
<TextView
    android:id="@+id/end_label"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="\n\n"
    />

<Button
    android:id="@+id/ok"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:layout_below="@id/end_entry"
    android:text="Ok"
    />
<Button
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:layout_toLeftOf="@id/ok"
    android:layout_alignTop="@id/ok"
    android:text="Cancel" />
</LinearLayout>